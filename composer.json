{
    "name": "raadaa/raadaa-base",
    "description": "General Purpose Package for Raadaa Partners International Limited and sister companies",
    "keywords": [
        "raadaa",
        "raadaa-base"
    ],
    "homepage": "https://github.com/raadaa/raadaa-base",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Lubem Tser",
            "email": "enginlubem@ymail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "illuminate/contracts": "7.* || ^8.15 || 9.0 - 9.34 || ^9.36 || ^10.0",
        "ext-json": "*"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Raadaa\\RaadaaBase\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Raadaa\\RaadaaBase\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Raadaa\\RaadaaBase\\RaadaaBaseServiceProvider"
            ],
            "aliases": {
                "RaadaaBase": "Raadaa\\RaadaaBase\\RaadaaBaseFacade"
            }
        }
    }
}
